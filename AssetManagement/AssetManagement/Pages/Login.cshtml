@page
@model AssetManagement.Pages.LoginModel
@{
}
<h1>Login</h1>
<hr style="border: 1px solid black; width: 100%; margin: 0 auto;">
@if (Model.error == 1)
{
	<div style="color:red">
		<h3>Username or password is incorrect!</h3>
	</div>
}
<form method="post">
	<table>
		<tr>
			<td>Username</td>
		</tr>
		<tr>
			<td><input asp-for="@Model.account.username" type="text" /></td>
			<span asp-validation-for="@Model.account.username" class="text-danger"></span>
		</tr>
		<tr>
			<td>Password</td>
		</tr>
		<tr>
			<td><input asp-for="@Model.account.password" type="password" /></td>
			<span asp-validation-for="@Model.account.password" class="text-danger"></span>

		</tr>
		<tr>
			<td><button type="submit" style="background:#F26f21;color:white">Login</button></td>
		</tr>
	</table>
</form>